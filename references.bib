@article{control_ecdc_efsa_2019,
	title = {{EFSA} and {ECDC} technical report on the collection and analysis of whole genome sequencing data from food-borne pathogens and other relevant microorganisms isolated from human, animal, food, feed and food/feed environmental samples in the joint {ECDC}-{EFSA} molecular typing database},
