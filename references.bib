	author = {Isidro, Joana and Ferreira, Susana and Pinto, Miguel and Domingues, Fernanda and Oleastro, Mónica and Gomes, João Paulo and Borges, Vítor},
	month = jun,
	year = {2020},
	keywords = {Antibiotic resistance, Genome diversity, Phase variation, Virulence factors},
	pages = {104213},
	file = {Submitted Version:/home/rmamede/Zotero/storage/QUXSUB2U/Isidro et al. - 2020 - Virulence and antibiotic resistance plasticity of .pdf:application/pdf},
